{
  // ES5 for the examples
  "parserOptions": {
    "ecmaVersion": 5,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [ "react" ],
  "env": {
    // I write for browser
    "browser": true
  },
  "globals": { "GeniBlocks": false, "BioLogica": false, "React": false, "ReactDOM": false },
  // To get a default set of options
  "extends": [ "eslint:recommended", "plugin:react/recommended" ],
  // To give you an idea how to override rule options:
  "rules": {
    "semi": [2, "always"],
    "eqeqeq": [2, "allow-null"],
    "no-console": [0],
    "quotes": [0],
    "eol-last": [0],
    "no-mixed-requires": [0],
    "no-underscore-dangle": [0],

    // react plugin rules
    //"react/prop-types": [0],  // propTypes declarations not required
    "react/react-in-jsx-scope": [0] // React need not be explicitly declared in scope
  }
}
